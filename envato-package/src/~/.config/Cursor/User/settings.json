    "workbench.editor.limit.excludeOpened": false,
    "workbench.editor.limit.excludeFocused": false,
    "workbench.editor.limit.excludeVisible": false,
    "workbench.editor.limit.excludeActive": false,
    "workbench.editor.limit.excludeModified": false,
    
    // Otimizações de performance geral
    "workbench.startupEditor": "none",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.settings.useSplitJSON": false,
    "workbench.settings.openDefaultSettingsFirst": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.settings.useSplitJSON": false,
    "workbench.settings.openDefaultSettingsFirst": false,
    
    // Desabilitar recursos de debug desnecessários
    "debug.console.closeOnEnd": true,
    "debug.internalConsoleOptions": "neverOpen",
    "debug.showBreakpointsInOverviewRuler": false,
    "debug.showInlineBreakpointCandidates": false,
    
    // Otimizações de extensões
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,
    
    // Otimizações de notificações
    "notifications.toast": false,
