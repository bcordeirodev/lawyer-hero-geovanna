{
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
    "editor.formatOnSave": true,
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[mustache]": {
        "editor.defaultFormatter": "monosans.djlint"
    },
    "remote.SSH.remotePlatform": {
        "10.20.132.35": "linux"
    },
    "git.autofetch": true,
    "workbench.colorTheme": "Default Dark Modern",
    
    // === OTIMIZAÇÕES DE PERFORMANCE ===
    
    // Desabilitar recursos desnecessários
    "workbench.enableExperiments": false,
    "workbench.enableTelemetry": false,
    "telemetry.telemetryLevel": "off",
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,
    "update.mode": "none",
    
    // Otimizações de editor
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,
    "editor.renderLineHighlight": "none",
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.smoothScrolling": false,
    "editor.mouseWheelScrollSensitivity": 1,
    "editor.fontLigatures": false,
    "editor.fontSize": 14,
    "editor.lineHeight": 1.2,
    
    // Otimizações de arquivos
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/dist/**": true,
        "**/build/**": true,
        "**/.git/**": true,
        "**/coverage/**": true,
        "**/.next/**": true,
        "**/out/**": true
    },
    "files.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/.git": true,
        "**/coverage": true,
        "**/.next": true,
        "**/out": true,
        "**/*.log": true,
        "**/*.tmp": true
    },
    "files.autoSave": "off",
    "files.autoSaveDelay": 1000,
    "files.hotExit": "off",
    "files.restoreUndoStack": false,
    
    // Otimizações de busca
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/.git": true,
        "**/coverage": true,
        "**/.next": true,
        "**/out": true,
        "**/*.log": true,
        "**/*.tmp": true
    },
    "search.followSymlinks": false,
    "search.useGlobalIgnoreFiles": true,
    
    // Otimizações de TypeScript
    "typescript.suggest.autoImports": true,
    "typescript.suggest.paths": true,
    "typescript.preferences.includePackageJsonAutoImports": "auto",
    "typescript.suggest.includeCompletionsForModuleExports": true,
    "typescript.suggest.includeCompletionsWithSnippetText": true,
    "typescript.suggest.includeCompletionsWithClassMemberSnippets": true,
    "typescript.suggest.includeCompletionsWithInsertText": true,
    "typescript.suggest.includeCompletionsWithReplaceText": true,
    
    // Otimizações de JavaScript
    "javascript.suggest.autoImports": true,
    "javascript.suggest.paths": true,
    "javascript.preferences.includePackageJsonAutoImports": "auto",
    "javascript.suggest.includeCompletionsForModuleExports": true,
    "javascript.suggest.includeCompletionsWithSnippetText": true,
    "javascript.suggest.includeCompletionsWithClassMemberSnippets": true,
    "javascript.suggest.includeCompletionsWithInsertText": true,
    "javascript.suggest.includeCompletionsWithReplaceText": true,
    
    // Otimizações de IntelliSense
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.parameterHints.enabled": true,
    "editor.hover.enabled": true,
    "editor.hover.delay": 300,
    "editor.suggest.showKeywords": false,
    "editor.suggest.showSnippets": true,
    "editor.suggest.showClasses": true,
    "editor.suggest.showFunctions": true,
    "editor.suggest.showVariables": true,
    "editor.suggest.showConstants": true,
    "editor.suggest.showEnums": true,
    "editor.suggest.showEnumsMembers": true,
    "editor.suggest.showWords": true,
    "editor.suggest.showUsers": false,
    "editor.suggest.showFiles": true,
    "editor.suggest.showFolders": true,
    "editor.suggest.showReferences": true,
    "editor.suggest.showColors": true,
    "editor.suggest.showCustomcolors": true,
    "editor.suggest.showUnits": true,
    "editor.suggest.showValues": true,
    "editor.suggest.showEnums": true,
    "editor.suggest.showEnumsMembers": true,
    "editor.suggest.showWords": true,
