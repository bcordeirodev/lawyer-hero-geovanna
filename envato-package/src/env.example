# ============================================================================
# LAWYER HERO - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env.local and fill in your values
# 
# @author Bruno Cordeiro
# @version 1.0.0
# ============================================================================

# ============================================================================
# APP CONFIGURATION
# ============================================================================

# Application basic info
NEXT_PUBLIC_APP_NAME=LawyerHero
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://geovannanery.com

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Development flags
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# UI Features (apenas as que estão sendo utilizadas)
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_WHATSAPP_INTEGRATION=true

# ============================================================================
# EMAIL CONFIGURATION (EmailJS)
# ============================================================================

# EmailJS service configuration for contact form
# Get these values from your EmailJS dashboard: https://emailjs.com
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id_here
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id_here
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key_here

# ============================================================================
# CONTACT EMAIL CONFIGURATION
# ============================================================================

# Email de destino para formulário de contato
NEXT_PUBLIC_CONTACT_EMAIL=your_contact_email@example.com

# ============================================================================
# NOTES
# ============================================================================
#
# 1. Apenas variáveis que estão sendo utilizadas no projeto atual
# 2. Dados do advogado permanecem no arquivo de configuração (src/constants/data.ts)
# 3. Mantenha as chaves sensíveis seguras e nunca as commite no version control
# 4. Use diferentes chaves para desenvolvimento e produção
#
# ============================================================================ 