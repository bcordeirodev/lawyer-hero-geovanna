# ============================================================================
# LAWYER HERO - PRODUCTION ENVIRONMENT
# ============================================================================
# Configurações para produção na Vercel
# 
# @author Bruno Cordeiro
# @version 1.0.0
# ============================================================================

# ============================================================================
# APP CONFIGURATION
# ============================================================================

# Application basic info
NEXT_PUBLIC_APP_NAME=LawyerHero
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://geovannanery.com

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Development flags
NODE_ENV=production
NEXT_PUBLIC_DEBUG_MODE=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# UI Features (produção - otimizadas)
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_WHATSAPP_INTEGRATION=true

# ============================================================================
# EMAIL CONFIGURATION (EmailJS)
# ============================================================================

# EmailJS service configuration for contact form
# Configure these in Vercel's Environment Variables dashboard
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_production_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_production_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_production_public_key

# ============================================================================
# CONTACT EMAIL CONFIGURATION
# ============================================================================

# Email de destino para formulário de contato
NEXT_PUBLIC_CONTACT_EMAIL=your_contact_email@example.com

# ============================================================================
# VERCEL DEPLOYMENT
# ============================================================================
#
# Para configurar na Vercel:
# 1. Acesse o dashboard da Vercel
# 2. Vá para Settings > Environment Variables
# 3. Adicione cada variável abaixo:
#
# NEXT_PUBLIC_APP_NAME=LawyerHero
# NEXT_PUBLIC_APP_VERSION=1.0.0
# NEXT_PUBLIC_APP_URL=https://geovannanery.com
# NODE_ENV=production
# NEXT_PUBLIC_DEBUG_MODE=false
# NEXT_PUBLIC_ENABLE_DARK_MODE=true
# NEXT_PUBLIC_ENABLE_ANIMATIONS=true
# NEXT_PUBLIC_ENABLE_WHATSAPP_INTEGRATION=true
# NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_production_service_id
# NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_production_template_id
# NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_production_public_key
# NEXT_PUBLIC_CONTACT_EMAIL=your_contact_email@example.com
#
# ============================================================================ 